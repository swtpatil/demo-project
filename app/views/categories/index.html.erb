<h1>Categories</h1>

<table class="table table-success table-striped-columns ml-4" style="max-width: 90rem;" >

  <thead  class="table table-dark">
	<tr>
  <th>ID</th>
  <th>Category Name</th>
  <th>Description</th>
  <th>Products</th>
  <th>Update</th>
  <th>Delete</th>
  </tr>
  </thead>

	<tbody>
  <% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= link_to "Products", category_products_path(category.id), class: "btn btn-info" %></td>
    <td><%= link_to "Update", edit_category_path(category.id), class: "btn btn-info" %></td>
    <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger ml-3" %></td>
  </tr>
  <% end %>
	</tbody>

</table>

<%= link_to "New Category", new_category_path, class: "btn btn-primary btn-lg mb-3" %>
<br>
<%= link_to "Download as CSV", categories_path(format: :csv), download: ["Categories", Date.today].join(""), class: "btn btn-info btn-lg" %>
