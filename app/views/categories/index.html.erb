<h1>Categories</h1>

<table class="table table-sm table-striped ml-4" style="max-width: 30rem;" >

  <thead  class="thead-dark">
	<tr>
  <th>ID</th>
  <th>Category Name</th>
  <th>Description</th>
  <th>Select</th>
  </tr>
  </thead>

	<tbody>
  <% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= button_to 'Select' %></td>
  </tr>

  <% end %>
	</tbody>

</table>

<%= link_to "New Category", new_category_path %>
