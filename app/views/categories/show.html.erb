<div class="col-lg-8 mt-3">
  <div class="card shadow">
    <div class= "card-header">
      <p><%= @category.name %></p>

      <p><%= @category.description %></p>
    </div>
  </div>
  <div class="mt-2">
    <%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "btn btn-danger" %>
  </div>
</div>


