<h1>Products</h1>
<table class="table table-sm table-striped ml-4" style="max-width: 90rem;" >

  <thead  class="thead-dark">
	<tr>
    <th>Product Name</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Rating</th>
  </tr>
  </thead>

	<tbody>
  <% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.quantity %></td>
    <td><%= product.price %></td>
    <td><%= product.rating %></td>
  </tr>
  <% end %>
	</tbody>

</table>